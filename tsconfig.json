{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    // "module": "esnext",
    "module": "commonjs",
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.d.ts"]
}
